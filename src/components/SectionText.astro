---
import splitText from "../utils/splitText";
---

<div class="section-text">
    <p
        set:html={splitText(
            "At the crossroad of consulting & advertising, we design cultural innovations that create value and cross channel communications that generate conversations",
        )}
    />
</div>

<style>
    .section-text {
        padding: 100px 150px;
        font-size: 8rem;
        text-align: center;
    }
</style>

<script>
    let section: NodeListOf<Element>;
    let words: NodeListOf<Element>;

    const init = () => {
        section = document.querySelectorAll(".section-text");
        words = document.querySelectorAll(".section-text .word-inner");
        const tl = gsap
            .timeline({
                scrollTrigger: {
                    trigger: section,
                    start: "top bottom=-100px",
                },
            })
            .from(words, {
                duration: 1,
                ease: "power4",
                y: "100%",
                stagger: 0.04,
            });
    };

    document.addEventListener("astro:page-load", () => {
        init();
    });
</script>

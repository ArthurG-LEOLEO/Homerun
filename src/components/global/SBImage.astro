---
import { Image } from "astro:assets";
import { getImageSize } from "../../utils/storyblok";

const {
    class: className,
    image,
    loading,
    "aria-label": ariaLabel,
} = Astro.props;

const { width, height } = getImageSize(image);
---

{
    image && image.id && (
        <Image
            class={className}
            width={width}
            height={height}
            loading={loading}
            src={image.filename}
            alt={image.alt}
            aria-label={ariaLabel}
            draggable="false"
        />
    )
}

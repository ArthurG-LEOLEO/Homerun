---
const { blok, noBorder = false } = Astro.props;

let backgroundClasses = "";
switch (blok.background) {
    case "pink":
        backgroundClasses = "bg-pink border-black text-black";
        break;
    case "orange":
        backgroundClasses = "bg-orange border-white text-white";
        break;
    case "blue":
        backgroundClasses = "bg-blue border-black text-black";
        break;
    case "green":
        backgroundClasses = "bg-green border-white text-white";
        break;
    case "black":
        backgroundClasses = "bg-black border-black text-white";
        break;
    default:
        backgroundClasses = "";
}

const borderClass = noBorder ? "" : "border-3";
---

<div
    class={`text-tag-lil inline-flex py-5 px-13 rounded-[6rem] ${borderClass} ${backgroundClasses}`}
>
    {blok.text}
</div>

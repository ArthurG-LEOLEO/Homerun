---
import { Icon } from "astro-icon/components";

import CustomTag from "./CustomTag.astro";
import SBRichText from "../global/SBRichText.astro";
import { hasRichTextContent } from "../../utils/richtext";

const { blok } = Astro.props;
---

<div
    class="flex flex-col gap-y-10 border-b border-black px-20 py-16 lg:flex-row lg:items-center lg:justify-between lg:gap-0 lg:px-40"
>
    <div class="flex items-center justify-between gap-16 lg:w-4/10">
        <span class="text-p20 flex-1 font-bold">{blok.title}</span>
        <div class="flex w-62 flex-none justify-center">
            {
                blok.included ? (
                    <CustomTag
                        blok={{
                            background: blok.deliverable_color,
                            text: blok.deliverable,
                        }}
                        noBorder={true}
                    />
                ) : (
                    <Icon name="cross-circle" class="size-28 md:size-34" />
                )
            }
        </div>
    </div>
    {
        hasRichTextContent(blok.description) ? (
            <div class="lg:w-5/10">
                <SBRichText content={blok.description} textSize="xsmall" />
            </div>
        ) : (
            <div class="hidden lg:block lg:w-5/10">-</div>
        )
    }
</div>

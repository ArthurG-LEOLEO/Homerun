---
import { useTranslations } from "../../i18n/utils";

const lang = Astro.currentLocale;
const t = useTranslations(lang);

interface Props {
    category: 'consulting' | 'advertising' | 'myself' | 'brand';
    class?: string;
}

const { category, class: className } = Astro.props;

const styles = {
    consulting: 'bg-pink border-black text-black',
    advertising: 'bg-orange border-white text-white',
    myself: 'bg-orange border-white text-white',
    brand: 'bg-green border-white text-white',
}
---

<div class={`text-tag-lil inline-flex py-5 px-13 rounded-[6rem] border-3 ${styles[category]} ${className || ''}`}>
    {t("category." + category)}
</div>
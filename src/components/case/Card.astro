---
import Cover from "./Cover.astro";

const { language, caseItem } = Astro.props;
---

<div class="flex flex-col gap-16 md:gap-24">
    <Cover caseItem={caseItem} />
    <div class="flex items-baseline gap-24">
        <span class="text-p-24 text-white/70">{caseItem.client}</span>
        <span class="text-p-24 text-white">{caseItem.title[0].mobile_title}</span>
    </div>
</div>

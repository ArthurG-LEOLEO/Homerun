---
import { useTranslations } from "../../i18n/utils";
import Card from "./Card.astro";

const lang = Astro.currentLocale;
const t = useTranslations(lang);

const { language, cases } = Astro.props;
---

<div class="container-main bg-black text-white py-100 md:pt-125">
    <h3 class="text-title-1 px-gutter">{t("case.other")}</h3>
    <div class="flex flex-col gap-48 mt-48 md:flex-row mt:items-start md:gap-0 md:mt-72">
        {cases.map((item) => (
            <div class="px-gutter md:w-6/12">
                <Card language={language} caseItem={item.content} />
            </div>
        ))}
    </div>
</div>

---
import { useTranslations } from "../../i18n/utils";
import Card from "../case/Card.astro";

const lang = Astro.currentLocale;
const t = useTranslations(lang);

const { cases } = Astro.props;
---

<div class="container-main" id="work-grid">
    <div
        class="mt-32 flex flex-col gap-48 md:mt-40 md:grid md:grid-cols-2 md:gap-x-0 md:gap-y-120"
    >
        {
            cases.map((item: { content: { category: string } }) => (
                <div
                    class="px-gutter work-featured-case"
                    data-category={item.content?.category}
                >
                    <Card caseItem={item} />
                </div>
            ))
        }
    </div>
</div>

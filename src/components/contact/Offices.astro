---
import SBImage from "../global/SBImage.astro";
import BasicLink from "../atoms/BasicLink.astro";

const { blok } = Astro.props;
---

<div class="md:px-gutter  mt-[-1rem]">
    <div class="pt-24 px-24 pb-32 bg-green text-white md:p-40">
        <h5 class="text-title-5 mb-24 md:mb-40">{blok.offices_title}</h5>
        <div class="flex flex-col gap-32 md:flex-row md:gap-40">
            {blok.offices.map((item) => (
                <div class="flex flex-col gap-16">
                    <SBImage
                        class="w-full"
                        image={item.photo}
                    />
                    <h6 class="text-title-6">{item.title}</h6>
                    <div class="whitespace-pre-wrap text-p-16">{/*
                        */}{item.address}{/*
                    */}</div>
                    <div>
                        <BasicLink
                            link={item.link[0]}
                            className="relative inline-flex after:absolute after:inset-x-0 after:bottom-0 after:h-1 after:bg-current text-cta-16"
                        />
                    </div>
                </div>
            ))}
        </div>
    </div>
</div>

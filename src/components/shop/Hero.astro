---
const { blok } = Astro.props;
---

<div class="container-main flex flex-col items-center pt-150 pb-75 lg:pb-125">
    <span
        class="page-subtitle text-tag-big mb-24 flex items-center justify-center rounded-[5rem] border-3 px-16 py-12 opacity-0 lg:mb-65 lg:px-24 lg:py-13"
    >
        {blok.subtitle}
    </span>
    <h1 class="text-title-2 m-auto text-center">
        <span class="shop-title-el inline-block opacity-0"
            >{blok.title_first_part}</span
        >
        <br />
        <button
            data-category="myself"
            id="myself-button"
            class="shop-title-el shop-category-btn before:bg-orange relative z-[1] cursor-pointer opacity-0 transition-[color] duration-300 before:absolute before:top-0 before:right-[-1rem] before:bottom-0 before:left-[-1rem] before:z-[-1] before:origin-left before:translate-y-10 before:scale-x-0 before:rotate-[-0.9deg] before:transition-[scale,rotate] before:duration-300 before:ease-out after:absolute after:right-0 after:bottom-4 after:left-0 after:h-2 after:origin-left after:bg-current hover:text-white hover:before:scale-x-[1] hover:before:rotate-[-1.8deg] hover:before:duration-[350ms] hover:before:ease-[cubic-bezier(0.34,1.36,0.64,1)]"
            >{blok.title_first_category}</button
        >
        <span class="shop-title-el inline-block opacity-0"
            >{blok.title_second_part}</span
        >
        <button
            data-category="brand"
            id="brand-button"
            class="shop-category-btn shop-title-el before:bg-green relative z-[1] cursor-pointer opacity-0 transition-[color] duration-300 before:absolute before:top-0 before:right-[-1rem] before:bottom-0 before:left-[-1rem] before:z-[-1] before:origin-left before:translate-y-10 before:scale-x-0 before:rotate-[-0.9deg] before:transition-[scale,rotate] before:duration-300 before:ease-out after:absolute after:right-0 after:bottom-4 after:left-0 after:h-2 after:origin-left after:bg-current hover:text-white hover:before:scale-x-[1] hover:before:rotate-[-1.8deg] hover:before:duration-[350ms] hover:before:ease-[cubic-bezier(0.34,1.36,0.64,1)]"
            >{blok.title_second_category}</button
        >
    </h1>
</div>

<style>
    .shop-category-btn.active {
        color: var(--color-white) !important;
        &::before {
            scale: 1 !important;
        }
    }
</style>

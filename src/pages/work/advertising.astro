---
import { useStoryblokApi } from "@storyblok/astro";

import { parseUrl, generateStaticPaths } from "../../utils/storyblok";
import isPreview from "../../utils/isPreview";
import Layout from "../../layouts/Layout.astro";
import Work from "../../storyblok/pages/Work.astro";

const storyblokApi = useStoryblokApi();

const language = Astro.currentLocale;

const { data } = await storyblokApi.get(`cdn/stories/work`, {
    version: "draft",
});

const story = data.story;
const alternates = story.alternates;
---

<Layout language={language} alternates={alternates} headerWhite={true}>
    <Work language={language} blok={story} />
</Layout>

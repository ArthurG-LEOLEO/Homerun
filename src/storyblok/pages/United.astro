---
import Cases from "../../components/united/Cases.astro";
import Hero from "../../components/united/Hero.astro";
import Logos from "../../components/united/Logos.astro";
import Archived from "../../components/united/Archived.astro";
import Cards from "../../storyblok/sections/Cards.astro";
import { useTranslations } from "../../i18n/utils";

const lang = Astro.currentLocale;
const t = useTranslations(lang);

const { language, blok } = Astro.props;
---

<div id="page-united" class="united bg-green overflow-hidden text-white">
    <Hero blok={blok} />
    {blok.cards && blok.cards[0] && <Cards blok={blok.cards[0]} />}
    <Logos blok={blok} />
    <Cases blok={blok} />
    {
        blok.archived_cases && blok.archived_cases.length > 0 && (
            <Archived blok={blok} />
        )
    }
</div>

---
import splitText from "../../utils/splitText";
import SectionText from "../../components/SectionText.astro";
const { language, blok } = Astro.props;
---

<div class="page">
    <div class="hero">
        <h1 class="title" set:html={splitText("Page: " + blok.Title)} />
        <div class="blocks">
            <div class="block"></div>
            <div class="block"></div>
            <div class="block"></div>
            <div class="block"></div>
            <div class="block"></div>
        </div>
    </div>
    <SectionText />
</div>

<script>
    let title: NodeListOf<Element> | null;
    let blocks: NodeListOf<Element> | null;
    let tl: gsap.core.Timeline | null;

    const setVariables = () => {
        blocks = document.querySelectorAll(".page .hero .block");
        title = document.querySelectorAll(".page .hero .title .word-inner");
    };
    const init = () => {
        setVariables();

        tl = gsap
            .timeline({
                defaults: {
                    ease: "power4",
                },
            })
            .from(title, {
                duration: 1,
                y: "100%",
                stagger: 0.2,
            })
            .from(
                blocks,
                {
                    duration: 1.2,
                    y: 50,
                    opacity: 0,
                    stagger: 0.05,
                    ease: "elastic.out(1,0.3)",
                },
                "<+0.2",
            );
    };

    const cleanup = () => {
        if (tl) {
            tl.kill();
            tl = null;
        }
        title = null;
        blocks = null;
    };

    document.addEventListener("astro:page-load", () => {
        init();
    });

    document.addEventListener("astro:before-swap", () => {
        cleanup();
    });
</script>

<style>
    .hero {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        background-color: var(--blue);
        padding-block: 300px;
        h1 {
            font-size: 10rem;
            font-weight: 400;
        }
    }

    .title {
        display: block;
    }

    .blocks {
        margin-top: 50px;
        display: flex;
        gap: 10px;
    }

    .block {
        width: 50px;
        height: 50px;
        background-color: var(--green);
    }
</style>
